<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollViewInfo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background"
    android:padding="16dp">

    <ScrollView
        android:id="@+id/sv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/llInfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Logo o imagen de la app -->
            <ImageView
                android:id="@+id/ivAppLogo"
                android:layout_width="135dp"
                android:layout_height="135dp"
                android:layout_gravity="center"
                android:contentDescription="Logo de la App"
                android:src="@mipmap/ic_launcher_foreground" />

            <!-- Propósito -->
            <TextView
                android:id="@+id/tvAppPurpose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/quicksand_regular"
                android:lineSpacingExtra="2dp"
                android:text="Esta aplicación permite consultar información detallada sobre todos los campeones de League of Legends: estadísticas, habilidades, skins y lore."
                android:textColor="@color/white"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white"
                android:layout_marginVertical="8dp"/>
            <!-- Funcionalidades -->
            <TextView
                android:id="@+id/tvFeaturesTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/quicksand_regular"
                android:text="Funcionalidades:"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvFeatures"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/quicksand_regular"
                android:text="• Consultar estadísticas y habilidades de los campeones\n• Ver todas las skins disponibles\n• Leer el lore de los campeones\n• Navegación sencilla mediante pestañas"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white"
                android:layout_marginVertical="8dp"/>
            <!-- Créditos -->
            <TextView
                android:id="@+id/tvCreditsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/quicksand_regular"
                android:text="Créditos:"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvCredits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/quicksand_regular"
                android:text="Datos proporcionados por Riot Games (Data Dragon)\nDesarrollador: MarioCvPz"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white"
                android:layout_marginVertical="8dp"/>
            <!-- Contacto -->
            <TextView
                android:id="@+id/tvContactTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"

                android:fontFamily="@font/quicksand_regular"
                android:text="Contacto / Soporte:"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/quicksand_regular"
                android:text="Email: mariocvpz@gmail.com\nGitHub: github.com/mariocvpz"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </LinearLayout>
    </ScrollView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvReport"
        android:layout_width="match_parent"
        android:backgroundTint="@color/red_background"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sv1">

    <ScrollView
        android:id="@+id/sv2"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/tvAppDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand_regular"
                android:text="Esta aplicación es un proyecto de terceros y no está afiliada ni respaldada por Riot Games."
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvCopyright"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand_regular"
                android:text="League of Legends © Riot Games, Inc. Todos los derechos reservados. Los datos y activos de los campeones pertenecen a Riot Games."
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvDisclaimer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand_regular"
                android:text="Toda la información mostrada en esta aplicación es únicamente con fines educativos y de referencia. Esta app no genera ingresos ni busca beneficios comerciales."
                android:textColor="@color/white"
                android:textSize="12sp" />

        </LinearLayout>
    </ScrollView>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cvReport"
        android:text="Made with ❤️ By Mario 😎"
        android:textColor="@color/white"
        android:fontFamily="@font/quicksand_regular"
        android:layout_marginTop="8dp"
        android:textStyle="italic"
        android:textSize="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
