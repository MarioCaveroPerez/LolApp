<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black">

    <ImageView
        android:id="@+id/ivSplashArt"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:src="@drawable/imagen_ejemplo" />

    <TextView
        android:id="@+id/tvChampionName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Aatrox"
        android:textColor="@color/gold"
        android:textSize="32sp"
        android:fontFamily="@font/quicksand_regular"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/ivSplashArt"
        app:layout_constraintBottom_toTopOf="@id/tvChampionTitle"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/tvChampionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="La Espada de los Oscuros"
        android:fontFamily="@font/quicksand_regular"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/ivSplashArt"
        app:layout_constraintBottom_toBottomOf="@id/ivSplashArt"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"/>


    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainerChampion"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tabLayoutChampion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayoutChampion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/toolbar_dark"
        app:tabIndicatorColor="@color/gold"
        app:tabSelectedTextColor="@color/gold"
        app:tabTextColor="@color/white"
        app:tabMode="fixed"
        app:tabGravity="fill"
        app:layout_constraintTop_toBottomOf="@id/ivSplashArt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
