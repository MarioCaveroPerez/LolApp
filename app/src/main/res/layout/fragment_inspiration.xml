<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".Activities.Runes.Fragments.DominationFragment">

    <!-- TÃ­tulo del Ã¡rbol de runas -->
    <TextView
        android:id="@+id/tvRuneTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/inspiracion"
        android:textStyle="bold"
        android:textSize="22sp"
        android:gravity="center"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Contenedor vertical para las filas -->
    <LinearLayout
        android:id="@+id/llRunesContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvRuneTitle"
        app:layout_constraintVertical_bias="0.339">

        <!-- ðŸ”´ FILA DE RUNAS PRINCIPALES -->
        <LinearLayout
            android:id="@+id/llKeyRunes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- Ejemplo de imagen redonda -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image1"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="8dp"
                android:scaleType="centerCrop"
                app:strokeColor="@color/gold"
                app:strokeWidth="2dp"
                app:shapeAppearanceOverlay="@style/RoundedImageView"
                tools:src="@drawable/ic_rune_example" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image2"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="8dp"
                android:scaleType="centerCrop"
                app:strokeColor="@color/gold"
                app:strokeWidth="2dp"
                app:shapeAppearanceOverlay="@style/RoundedImageView"
                tools:src="@drawable/ic_rune_example" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image3"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="8dp"
                app:strokeColor="@color/gold"
                app:strokeWidth="2dp"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/RoundedImageView"
                tools:src="@drawable/ic_rune_example" />

        </LinearLayout>

        <!-- ðŸŸ¡ FILAS DE SUBRUNAS (3x3) -->
        <LinearLayout
            android:id="@+id/llSubRunesContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <!-- Cada fila tiene 3 imÃ¡genes -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/image11"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    app:strokeColor="@color/gold"
                    app:strokeWidth="2dp"
                    android:layout_margin="6dp"
                    app:shapeAppearanceOverlay="@style/RoundedImageView"
                    tools:src="@drawable/ic_rune_example" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/image12"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    app:strokeColor="@color/gold"
                    app:strokeWidth="2dp"
                    android:layout_margin="6dp"
                    app:shapeAppearanceOverlay="@style/RoundedImageView"
                    tools:src="@drawable/ic_rune_example" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/image13"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_margin="6dp"
                    app:strokeColor="@color/gold"
                    app:strokeWidth="2dp"
                    app:shapeAppearanceOverlay="@style/RoundedImageView"
                    tools:src="@drawable/ic_rune_example" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/image21"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_margin="6dp"
                    app:strokeColor="@color/gold"
                    app:strokeWidth="2dp"
                    app:shapeAppearanceOverlay="@style/RoundedImageView"
                    tools:src="@drawable/ic_rune_example" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/image22"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_margin="6dp"
                    app:strokeColor="@color/gold"
                    app:strokeWidth="2dp"
                    app:shapeAppearanceOverlay="@style/RoundedImageView"
                    tools:src="@drawable/ic_rune_example" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/image23"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    app:strokeColor="@color/gold"
                    app:strokeWidth="2dp"
                    android:layout_margin="6dp"
                    app:shapeAppearanceOverlay="@style/RoundedImageView"
                    tools:src="@drawable/ic_rune_example" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/image31"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_margin="6dp"
                    app:strokeColor="@color/gold"
                    app:strokeWidth="2dp"
                    app:shapeAppearanceOverlay="@style/RoundedImageView"
                    tools:src="@drawable/ic_rune_example" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/image32"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_margin="6dp"
                    app:strokeColor="@color/gold"
                    app:strokeWidth="2dp"
                    app:shapeAppearanceOverlay="@style/RoundedImageView"
                    tools:src="@drawable/ic_rune_example" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/image33"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_margin="6dp"
                    app:strokeColor="@color/gold"
                    app:strokeWidth="2dp"
                    app:shapeAppearanceOverlay="@style/RoundedImageView"
                    tools:src="@drawable/ic_rune_example" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
